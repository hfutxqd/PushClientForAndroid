<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:padding="16dp" >
    <android.support.design.widget.TextInputLayout
        android:id="@+id/et_server_host_layout"
        android:layout_width="300dp"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_server_host"
            android:hint="@string/server_host_hint"
            android:inputType="textEmailAddress"
            android:layout_width="300dp"
            android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/et_server_port_layout"
        android:layout_width="300dp"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_server_port"
            android:inputType="number"
            android:maxLength="5"
            android:hint="@string/server_port_hint"
            android:layout_width="300dp"
            android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>

    <CheckBox
        android:id="@+id/cb_auto_connect"
        android:text="@string/cb_auto_connect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <include layout="@layout/panel_cancel_confirm" />
</LinearLayout>